{
  "$id": "https://openbelasting.nl/schemas/openblasting.adres.schema.json",
  "$schema": "https://docs.commongateway.nl/schemas/Entity.schema.json",
  "version": "0.1",
  "title": "Adres",
  "type": "object",
                "properties": {
                    "postcode": {
                        "pattern": "[1-9][0-9]{3}[A-Z]{2}",
                        "type": "string",
                        "description": "postcode",
                        "example": "3534PL"
                    },
                    "woonplaatsnaam": {
                        "maxLength": 80,
                        "minLength": 1,
                        "type": "string",
                        "description": "woonplaats",
                        "example": "Utrecht"
                    },
                    "straatnaam": {
                        "maxLength": 24,
                        "minLength": 1,
                        "type": "string",
                        "description": "straatnaam",
                        "example": "Barkasstraat"
                    },
                    "huisnummer": {
                        "pattern": "[0-9]{1,5}",
                        "type": "string",
                        "description": "huisnummer zonder letter en toevoegingen",
                        "example": "60"
                    },
                    "huisletter": {
                        "pattern": "[a-zA-Z]",
                        "type": "string",
                        "description": "huisletter",
                        "example": "A"
                    },
                    "huisnummertoevoeging": {
                        "pattern": "[a-zA-Z0-9]{1,4}",
                        "type": "string",
                        "description": "huisnummertoevoeging",
                        "example": "*"
                    },
                    "locatieomschrijving": {
                        "maxLength": 40,
                        "minLength": 1,
                        "type": "string",
                        "description": "locatieomschrijving",
                        "example": "land buren 22"
                    }
                },
                "description": "Adresinformatie"
}
